<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/blue">
    <ImageView
        android:id="@+id/pictureId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/pictureId2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="15dip"
        android:layout_below="@id/pictureId"
        android:layout_centerHorizontal="true"/>
    <WebView
        android:id="@+id/webview"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginTop="15dip"
        android:layout_below="@id/pictureId2"
        android:layout_centerHorizontal="true"></WebView>
    <TextView
        android:id="@+id/introduceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/webview"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:text="1111"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dip"/>
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dip"
        android:layout_below="@id/introduceId"
        />

</RelativeLayout>
</ScrollView>